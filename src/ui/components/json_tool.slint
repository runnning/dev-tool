import { VerticalBox, HorizontalBox } from "std-widgets.slint";
import { Label, CustomButton, CustomTextEdit } from "./common.slint";

export component JsonToolComponent {
    in-out property <string> input: "";
    in-out property <string> output: "";

    callback format-json();
    callback minify-json();

    VerticalBox {
        spacing: 16px;
        
        Label { text: "输入JSON："; }
        
        CustomTextEdit { 
            text <=> root.input;
            placeholder-text: "请输入要处理的JSON";
        }
        
        HorizontalBox {
            spacing: 16px;
            alignment: center;
            CustomButton { 
                text: "格式化";
                clicked => { root.format-json() }
            }
            CustomButton { 
                text: "压缩";
                clicked => { root.minify-json() }
            }
        }
        
        Label { text: "输出："; }
        
        CustomTextEdit { 
            text <=> root.output;
            read-only: true;
        }
    }
} 
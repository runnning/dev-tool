export global Fonts {
    // 字体家族
    out property <string> primary: "Microsoft YaHei";
    out property <string> secondary: "SimSun";
    out property <string> monospace: "Consolas";

    // 字体大小
    out property <length> size-tiny: 12px;
    out property <length> size-small: 14px;
    out property <length> size-normal: 16px;
    out property <length> size-large: 18px;
    out property <length> size-xlarge: 20px;
    out property <length> size-xxlarge: 24px;

    // 字体粗细
    out property <int> weight-light: 300;
    out property <int> weight-normal: 400;
    out property <int> weight-medium: 500;
    out property <int> weight-semibold: 600;
    out property <int> weight-bold: 700;

    // 字体系列
    out property <string> family-sans: "Microsoft YaHei";
    out property <string> family-mono: "Consolas";

    // 行高
    out property <length> line-height-compact: 1.2 * 1px;
    out property <length> line-height-normal: 1.5 * 1px;
    out property <length> line-height-relaxed: 1.8 * 1px;
} 